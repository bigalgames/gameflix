<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}" Background="{DynamicResource MainBackgourndBrush}">
                        <Grid>
                            <TextBlock Name="VideoPath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}">
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source="\ExtraMetadata\Themes\Fullscreen\BackgroundVideo.mp4"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <MediaElement MediaElementBehaviors.Repeat="True" Name="VideoSource" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                <MediaElement.CacheMode>
                                    <BitmapCache RenderAtScale="1"/>
                                </MediaElement.CacheMode>
                                <MediaElement.Style>
                                    <Style TargetType="MediaElement">
                                        <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPath, Path=Text}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                <Setter Property="MediaElement.Source" Value="" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </MediaElement.Style>
                            </MediaElement>
                        </Grid>
                        <Grid x:Name="PART_ViewHost" Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--Background Image 16:9-->
                            <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center" Grid.RowSpan="3" VerticalAlignment="Center">
                                <Image Stretch="Fill" Source="{ThemeFile 'Media/background.jpg'}"  >
                                    <Image.CacheMode>
                                        <BitmapCache EnableClearType="True" 
                                                     RenderAtScale="1" 
                                                     SnapsToDevicePixels="True"/>
                                    </Image.CacheMode>
                                </Image>
                            </StackPanel>

                            <!--Background Image 21:9-->
                            <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center" Grid.RowSpan="3" VerticalAlignment="Center">
                                <Image Stretch="Fill" Source="{ThemeFile 'Media/background_21-9.jpg'}"  >
                                    <Image.CacheMode>
                                        <BitmapCache EnableClearType="True" 
                                                     RenderAtScale="1" 
                                                     SnapsToDevicePixels="True"/>
                                    </Image.CacheMode>
                                </Image>
                            </StackPanel>

                            <!--Show/Hide Game Backgrounds for Grid-->
                            <Grid x:Name="GameBackgrounds" Grid.Row="0" Grid.RowSpan="3" Tag="{DynamicResource DisableGameBackgroundOnGridTrueFalse}" Style="{DynamicResource DisableGameBackgroundOnGrid}">
                                <FadeImage x:Name="PART_ImageBackground" Grid.RowSpan="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                <!--Overlay Image-->
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <StackPanel.Style>
                                        <Style>
                                            <Setter Property="Control.Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                    <Setter Property="Control.Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Border Background="{DynamicResource MainBackgroundOverlay}" Opacity="1" HorizontalAlignment="Stretch" Height="{StaticResource DesignHeight}"/>
                                </StackPanel>
                            </Grid>

                            <!--MICRO VIDEO BACKGROUND-->
                            <Grid Grid.Row="0" Grid.RowSpan="3" Opacity="1" Tag="{DynamicResource MicroVideoBackgrounds}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid x:Name="VideoBackgrounds" Tag="{DynamicResource MicroVideoBackgrounds}" Style="{DynamicResource VideoBackground}">
                                    <TextBlock Name="VideoPathMicro" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source="\ExtraMetadata\games\"/>
                                                            <Binding Path="SelectedGame.Id"/>
                                                            <Binding Source="\VideoMicroTrailer.mp4" />
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSourceBackgrounds" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}" Stretch="UniformToFill" HorizontalAlignment="Center">
                                        <MediaElement.Style>
                                            <Style TargetType="MediaElement">
                                                <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPathMicro, Path=Text}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=VideoBackgrounds, Path=Visibility}" Value="Collapsed">
                                                        <Setter Property="MediaElement.Source" Value=""/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MediaElement.Style>
                                    </MediaElement>
                                </Grid>
                                <Border Background="{DynamicResource OverlayBrush}" Opacity="0.3"/>
                            </Grid>
                            <!--TRAILER VIDEO BACKGROUND-->
                            <Grid Grid.Row="0" Grid.RowSpan="3" Opacity="1" Tag="{DynamicResource TrailerVideoBackgrounds}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid x:Name="VideoBackgroundsTrailer" Tag="{DynamicResource TrailerVideoBackgrounds}">
                                    <TextBlock Name="VideoPathTrailer" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source="\ExtraMetadata\games\"/>
                                                            <Binding Path="SelectedGame.Id"/>
                                                            <Binding Source="\VideoTrailer.mp4" />
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSourceBackgroundsTrailer" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}" Stretch="UniformToFill" HorizontalAlignment="Center">
                                        <MediaElement.Style>
                                            <Style TargetType="MediaElement">
                                                <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPathTrailer, Path=Text}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=MuteButton,Path=IsChecked}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Volume" From="0" To="0.5" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Volume" From="0.5" To="0" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=StopPlayButton,Path=IsChecked}" Value="True">
                                                        <Setter Property="MediaElement.Source" Value="Stop" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                        <Setter Property="MediaElement.Source" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MediaElement.Style>
                                    </MediaElement>
                                </Grid>
                            </Grid>                            

                            <Grid Grid.Row="0" Background="Transparent"
                                  Height="95">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="215" />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.3" From="0,0,0,0" To="0,-200,0,0"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.2" From="0,-200,0,0" To="0,0,0,0"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                
                                <FilterPresetSelector x:Name="PART_FilterPresetSelector" Margin="0,30,50,0" Grid.Column="1" Tag="{DynamicResource ShowAllFilterPresets}"/>

                                <ContentControl x:Name="PART_ElemBatteryStatus" Focusable="False" FontSize="42"
                                            VerticalAlignment="Bottom" Margin="10,0,10,10"
                                            Grid.Column="2">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Critical">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCritical}" />
                                                    <Setter Property="Foreground" Value="Red" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Low">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusLow}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Medium">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusMedium}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="High">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusHigh}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.IsCharging}" Value="True">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCharging}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>

                                <TextBlock x:Name="PART_TextBatteryPercentage" Style="{DynamicResource TextBlockBaseStyle}"
                                       VerticalAlignment="Center" Margin="0,25,20,0"
                                       Grid.Column="3"/>

                                <TextBlock x:Name="PART_TextClock" Style="{DynamicResource TextBlockBaseStyle}" FontWeight="Light"
                                       VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,0,0,10"
                                       Grid.Column="11" FontSize="40"/>

                                <!--Search Button Top-->
                                <ButtonEx x:Name="PART_ButtonSearch" VerticalAlignment="Bottom"
                                          Style="{DynamicResource ButtonTopMenu}"
                                          Grid.Column="5" Margin="0,0,0,0">
                                    <Button.Content>
                                        <Image RenderOptions.BitmapScalingMode="Fant" Width="30" Margin="5,0,5,0">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Image.Source" Value="../Images/PS5_SearchIcon.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ButtonSearch, Path=IsFocused}" Value="True">
                                                            <Setter Property="Image.Source" Value="../Images/PS5_SearchIcon_Dark.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ButtonSearch, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Image.Source" Value="../Images/PS5_SearchIcon_Dark.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button.Content>
                                </ButtonEx>
                                <TextBlock Grid.Column="4" Grid.ColumnSpan="3" Margin="20,0,0,-30" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                           FontFamily="Segoe UI Light" Foreground="White" FontSize="24" 
                                           Text="{DynamicResource LOCSearchLabel}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PART_ButtonSearch, Path=IsFocused}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!--Settings Button Top-->
                                <ButtonEx x:Name="PART_ButtonMainMenu" VerticalAlignment="Bottom"
                                          Style="{DynamicResource ButtonTopMenu}"
                                          Grid.Column="7" Margin="0,0,0,0">
                                    <Button.Content>
                                        <Image RenderOptions.BitmapScalingMode="Fant" Width="33" Margin="5,0,5,0">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Image.Source" Value="../Images/settings.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ButtonMainMenu, Path=IsFocused}" Value="True">
                                                            <Setter Property="Image.Source" Value="../Images/settings_dark.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ButtonMainMenu, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Image.Source" Value="../Images/settings_dark.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button.Content>
                                </ButtonEx>
                                <TextBlock Grid.Column="6" Grid.ColumnSpan="3"  Margin="15,0,0,-30" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                           FontFamily="Segoe UI Light" Foreground="White" FontSize="24" 
                                           Text="{DynamicResource LOCSettingsLabel}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PART_ButtonMainMenu, Path=IsFocused}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!--Extra Metadata Tools Profile Picture-->
                                <DockPanel VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.Column="9">
                                    <TextBlock Name="ProfilePicturePath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}">
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source="\ExtraMetadata\Themes\Common\ProfilePicture.png"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel HorizontalAlignment="Center">
                                        <Image Name="ProfilePictureSource" RenderOptions.BitmapScalingMode="Fant" Width="45" Margin="0,5,0,0"
                                           Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="{Binding ElementName=ProfilePicturePath, Path=Text}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                            <Setter Property="Source" Value="{Binding ElementName=ProfilePicturePath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <Image RenderOptions.BitmapScalingMode="Fant" Width="45" Margin="0,5,0,0"
                                               Tag="{DynamicResource UseAbsoluteExtraMetadataPath}"
                                               Source="{ThemeFile 'Media/ProfilePicture.png'}">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=ProfilePictureSource, Path=ActualWidth}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </StackPanel>
                                </DockPanel>

                                <!--Notifications-->
                                <ButtonEx x:Name="PART_ButtonNotifications" VerticalAlignment="Bottom" Style="{DynamicResource ButtonTopMenuNotification}"
                                          Grid.Column="9" Margin="0,0,0,0">
                                    <Button.Content>
                                        <Grid>
                                            <TextBlock x:Name="NotiIcon" Text="&#x25CF;" Foreground="#00FF48"
                                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                       FontSize="30"/>
                                        </Grid>
                                    </Button.Content>
                                </ButtonEx>
                                
                                <StackPanel VerticalAlignment="Bottom"
                                          Grid.Column="9">
                                    <Grid>
                                        <TextBlock x:Name="NotiIconBlue" Text="&#x25CF;" Foreground="#00A4FF"
                                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                       FontSize="35" Margin="0,0,5,-3"/>
                                    </Grid>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Api Notifications.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                </StackPanel>
                            </Grid>

                            <!--Show/Hide Content Left-->
                            <Grid Grid.Row="1" Grid.RowSpan="1" RenderTransformOrigin="0.5,1.1" Margin="0,0,0,0" Opacity="1">
                                <Grid.Resources>
                                    <Storyboard x:Key="LeftContentEnter">
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,-50" To="0,0,0,-50" Duration="0:0:0.3" FillBehavior="Stop"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0"  Duration="0:0:0.3" FillBehavior="Stop"/>

                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,-50" To="0,0,0,0" Duration="0:0:0.2" BeginTime="0:0:0.3" FillBehavior="Stop"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1"  Duration="0:0:0.2" BeginTime="0:0:0.3" FillBehavior="Stop"/>
                                    </Storyboard>
                                </Grid.Resources>
                                <Grid.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Grid.RenderTransform>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsFocused}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=DKGThemeModifier_PS5ish_StoreButton, Path=IsKeyboardFocusWithin}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="0">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="1">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="2">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="3">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="4">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="5">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="6">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="7">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="8">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="9">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="10">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="11">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="12">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="13">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="14">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource LeftContentEnter}" />
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
